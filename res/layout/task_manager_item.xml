<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="55dip"
    android:background="@drawable/item_background_selector"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/iv_app_icon"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/icon"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="55dip"
        android:layout_toRightOf="@id/iv_app_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dip"
            android:text="@string/function_name"
            android:textColor="@color/text_on_textView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_app_memory_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dip"
            android:text="@string/ram_size"
            android:textColor="@color/text_on_textView"
            android:textSize="14sp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_task_checked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="5dip"
        android:clickable="false"
        android:focusable="false" />

</RelativeLayout>